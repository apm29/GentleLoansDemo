<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="false">
        <shape android:shape="rectangle">
            <corners android:topLeftRadius="12dp" android:topRightRadius="12dp"/>
            <gradient android:type="linear"
                android:startColor="@color/gray_not_enabled_dark"
                android:angle="90"
                android:centerY="30%"
                android:centerColor="@color/gray_not_enabled_dark"
                android:endColor="@color/gray_not_enabled_dark"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:topLeftRadius="12dp" android:topRightRadius="12dp"/>
            <gradient android:type="linear"
                android:startColor="@color/white_foreground"
                android:angle="90"
                android:centerY="30%"
                android:centerColor="@color/white_foreground"
                android:endColor="@color/white_foreground"/>
        </shape>
    </item>
</selector>